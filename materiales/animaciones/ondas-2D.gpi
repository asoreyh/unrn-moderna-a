# 2D wave

#general 
reset
set grid
set samples 50
set isosamples 50
set xlabel "X"
set ylabel "Y"

set xrange [0:2*pi]
set yrange [0:2*pi]
set zrange [-2:2]
set cbrange [-2:2]
s=5. # time steps
timelenght = 20

# two waves
kx1=5.
ky1=0.
w1=1.
z1(A1,x,y,t)=A1*cos(kx1*x+ky1*y-w1*t)
p1 = 1.

kx2=3.
ky2=5.
w2=1.
z2(A2,x,y,t)=A2*cos(-kx2*x-ky2*y-w1*t)
p2 = 0.
# plot

do for [t = 0:timelenght*s] {
	splot (p1 * z1(1,x,y,t/s) + p2 * z2(1,x,y,t/s) ) w pm3d lt palette
	pause 0.
}
